
@model Survey;

<div class="text-center">
    <h1 class="display-4">Formulario de Registro</h1>
    <form method="POST" action="/survey">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location">Ubicación Dojo:</label>
            <select asp-for="Location" class="form-control">
                <option value="Santiago">Santiago</option>
                <option value="Iquique">Iquique</option>
                <option value="Antofagasta">Antofagasta</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="FavoriteLanguage">Lenguaje Favorito:</label>
            <select asp-for="FavoriteLanguage" class="form-control">
                <option value="java">Java</option>
                <option value="C#">C#</option>
                <option value="Python">Python</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Comment">Comentario:</label>
            <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
